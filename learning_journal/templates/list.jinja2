{% extends "layout.jinja2" %}
{% block body %}
    <div class="container">

      <div class="starter-template">
        <h1 class="pages-title">Learning Journal</h1>
        <p class="lead">Patrick Saunders' learning journal submissions for Codefellows Python 401</p>
      </div>

    </div><!-- /.container -->
    <section class="form">
      <form action="{{ request.route_url('new') }}" method="POST">
        <input type="hidden" name="csrf_token" class="security" value="{{ request.session.get_csrf_token() }}" />
          <div class="form-group">
            <h2>Title</h2>
            <input type="text" class="form-control" name="title" value="Entry Title">
            <h2>What did you learn today...</h2>
            <textarea name="body" class="form-control">Type here!</textarea>
            <button type="submit" class="form_add btn btn-primary">Submit</button>
          </div>
      </form>
    </section>
    {% for item in entries %}
    <section>
      <article>
        <h2 class="entrytitle">
          <a href="{{ request.route_url('detail', id=item.id) }}">{{ item.title }}</a>
        </h2>
          <p class="date">{{ item.creation_date.strftime('%b %d, %Y') }}</p>
      </article>
    </section>
    {% endfor %}
{% endblock %}
